<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_check_point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradianthigh"
            android:gravity="center"
            android:text="New Checkpoint"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btn_close_checkpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_checkpoint_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColorHint="#DCDBDC"
        android:hint="Enter Checkpoint Name"
        android:text=""
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Weight: "
            android:textColor="#DCDBDC"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#F4F2F3"
            android:gravity="center"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_increment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gradianthigh"
            android:text="+"
            android:textSize="24dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_decrement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:background="@drawable/gradianthigh"
            android:text="-"
            android:textColor="#FFFFFF"/>


    </LinearLayout>
    <Button
        android:id="@+id/btn_new_checkpoint"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradianthigh"
        android:text="Add"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>




</LinearLayout>